#!/bin/sh
# Create a Topdesk asset
set -eu

_this="$0"; _dir=${_this%/*}; _root=${_dir%/tools}
. "$_root/lib/common.sh"; . "$_root/lib/log.sh"; . "$_root/lib/args.sh"; . "$_root/lib/config.sh"

usage() {
  cat <<'USAGE'
Usage: ${TOOLBOX_NAME} assets-create --data JSON|@FILE [--path PATH] [--raw|--pretty]

Create an asset by POSTing JSON to /tas/api/assetmgmt/assets.
USAGE
}

DATA=""; PATH_OVERRIDE=""; RAW=0; PRETTY=0
while [ "$#" -gt 0 ]; do
  case "$1" in
    -h|--help) usage; exit 0 ;;
    --data) req_arg "$@"; DATA=$2; shift 2 ;;
    --path) req_arg "$@"; PATH_OVERRIDE=$2; shift 2 ;;
    --raw) RAW=1; shift ;;
    --pretty) PRETTY=1; shift ;;
    --) shift; break ;;
    -*) err "unknown option: %s" "$1"; usage >&2; exit 2 ;;
    *) break ;;
  esac
done

[ -n "$DATA" ] || { err "--data is required"; exit 2; }

path=${PATH_OVERRIDE:-/tas/api/assetmgmt/assets}

"$_root/tools/call" POST "$path" --data "$DATA" ${RAW:+--raw} ${PRETTY:+--pretty}
